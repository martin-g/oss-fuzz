path=$1
tags="${@:2}"

gofuzz_tags=$tags
if [[ $tags = -tags* ]]; then gofuzz_tags="-$tags"; fi
echo "Running ci-gofuzz sanitize $gofuzz_tags --overwrite_sources --sanitizers_package_path \"gofuzz/sanitizers\" $path"
ci-gofuzz sanitize $gofuzz_tags --overwrite_sources --sanitizers_package_path "gofuzz/sanitizers" $path

# Make the sanitizers package available globally. We do this here since there are fuzz targets that
# downloads a recent Go version and this insures that the sanitizers package exists in GOROOT in all cases
echo "Ensuring that the sanitizers package is in GOROOT"
GOFUZZ_ROOT=/root/.go/src/gofuzz
if [[ ! -d "${GOFUZZ_ROOT}" ]]; then
  mkdir $GOFUZZ_ROOT
  cp -r /gofuzz/sanitizers $GOFUZZ_ROOT
  pushd $GOFUZZ_ROOT/sanitizers
  rm go.mod
  find . -type f -name "*.go" -print0 | xargs -0 sed -i 's@github.com/CodeIntelligenceTesting/@@'
  popd
fi

# Clean the build cache since we changed the dependencies of the instrumented packages
echo "Running go clean -cache -modcache"
go clean -cache -modcache